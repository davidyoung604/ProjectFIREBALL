<%= render 'shared/error', obj: @cat %>

<div id="category_form" class="col-sm-6">
  <%= form_for(@cat) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <br />
    <%= f.label 'File types' %>
    <%= f.text_field :csv_extensions, class: 'form-control' %>
    <br />
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>
