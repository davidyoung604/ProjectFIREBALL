<div id="user_info">
  <h1><%= @user.name %></h1>
  <% if @user.admin %>
    User is an administrator
    <br />
  <% end %>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <br />
  <%= link_to 'Delete', user_path(@user), method: :delete %>
  <br />
  <%= link_to 'Back to user list', users_path %>
</div>

<br />

<div id="user_files">
  <% @user.user_files.each do |file| %>
    <%= link_to file.name, file %><br />
  <% end %>
</div>
