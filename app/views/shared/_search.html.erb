<div id="search" class="col-sm-6 top-pad-20">
  <h4>Search</h4>
  <%= form_tag(search_path, method: :get, id: :search_form) do %>
    <%= text_field_tag :query, params[:query], placeholder: 'Enter query',
                       class: ['form-control', 'top-buffer'] %>
    <br />
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <% end %>
</div>
